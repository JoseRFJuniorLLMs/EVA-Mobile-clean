<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- ðŸ”’ PRODUCTION: Only HTTPS allowed by default -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- ðŸ› ï¸ DEVELOPMENT: Allow localhost HTTP for testing -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android emulator host -->
    </domain-config>

    <!-- EVA-Mind servers (HTTP until SSL configured) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">35.232.177.102</domain>   <!-- GCP primary -->
        <domain includeSubdomains="true">104.248.219.200</domain>  <!-- DigitalOcean fallback -->
    </domain-config>
</network-security-config>
