# O app tenta conectar no PRIMARY primeiro.
# Se falhar, faz failover automatico para o FALLBACK.
# Quando no fallback, rechecka o primary a cada 60s.
#
# ==============================================================================

# Allow HTTP/WS (insecure) connections
# Set true for IP-based access, false for HTTPS domains
ALLOW_INSECURE=true

# ==============================================================================
# PRIMARY SERVER (tentado primeiro)
# ==============================================================================
PRIMARY_HOST=35.232.177.102
PRIMARY_API_PORT=8000
PRIMARY_AUDIO_PORT=8091

# ==============================================================================
# FALLBACK SERVER (usado quando primary esta offline)
# ==============================================================================
FALLBACK_HOST=104.248.219.200
FALLBACK_API_PORT=8000
FALLBACK_AUDIO_PORT=8091
